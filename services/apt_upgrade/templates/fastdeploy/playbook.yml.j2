---
- name: APT System Updates
  hosts: localhost
  become: yes
  vars:
    apt_upgrade_update_cache: {{ apt_upgrade_update_cache | default(true) }}
    apt_upgrade_dist_upgrade: {{ apt_upgrade_dist_upgrade | default(true) }}
    apt_upgrade_auto_remove: {{ apt_upgrade_auto_remove | default(true) }}
    apt_upgrade_auto_clean: {{ apt_upgrade_auto_clean | default(true) }}
    
  tasks:
    - name: Update apt cache
      apt:
        update_cache: yes
        cache_valid_time: 3600
      when: apt_upgrade_update_cache

    - name: Perform dist-upgrade
      apt:
        upgrade: dist
        autoclean: "{{ '{{' }} apt_upgrade_auto_clean {{ '}}' }}"
        autoremove: "{{ '{{' }} apt_upgrade_auto_remove {{ '}}' }}"
      when: apt_upgrade_dist_upgrade
      register: upgrade_result

    - name: Check if reboot is required
      stat:
        path: /var/run/reboot-required
      register: reboot_required

    - name: Report reboot status
      debug:
        msg: "Reboot required: {{ '{{' }} reboot_required.stat.exists | default(false) {{ '}}' }}"