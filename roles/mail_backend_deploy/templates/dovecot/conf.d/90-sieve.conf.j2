# Dovecot Sieve configuration
# Generated by Ansible - do not edit manually
# Role: mail_backend_deploy

plugin {
  # Sieve script directory
  sieve = file:{{ mail_backend_sieve_dir }};active={{ mail_backend_sieve_active }}

  # Global sieve scripts (optional)
  # sieve_before = /etc/dovecot/sieve/before.d
  # sieve_after = /etc/dovecot/sieve/after.d

  # Sieve extensions
  sieve_extensions = +fileinto +reject +envelope +vacation +vacation-seconds +notify +imapflags +relational +comparator-i;ascii-numeric +copy

  # ManageSieve settings
  sieve_max_script_size = 1M
  sieve_max_actions = 32
  sieve_max_redirects = 4
}
