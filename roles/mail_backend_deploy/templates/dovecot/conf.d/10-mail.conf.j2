# Dovecot mail location configuration
# Generated by Ansible - do not edit manually
# Role: mail_backend_deploy

# Mail storage location
mail_location = {{ mail_backend_dovecot_mail_location }}

# Namespace configuration
namespace inbox {
  inbox = yes
  separator = /
}

# User/group for mail access
mail_uid = {{ mail_backend_vmail_uid }}
mail_gid = {{ mail_backend_vmail_gid }}

# Allow privileged group access
mail_privileged_group = {{ mail_backend_vmail_group }}

# First valid UID/GID
first_valid_uid = {{ mail_backend_vmail_uid }}
first_valid_gid = {{ mail_backend_vmail_gid }}
