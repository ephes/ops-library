# Postfix transport map - Route domains to backend
# Generated by Ansible - do not edit manually
# Role: mail_relay_deploy
#
# Format: domain  transport:nexthop
# Using smtp transport with explicit host to bypass MX lookup

{% for domain in mail_relay_domains %}
{{ domain }}    smtp:[{{ mail_relay_backend_host }}]:{{ mail_relay_backend_port }}
{% endfor %}
