server:
    # Network interface
    interface: 0.0.0.0
    port: {{ dns_unbound_port }}
    do-ip4: yes
    do-ip6: no
    do-udp: yes
    do-tcp: yes

    # Access control (both modes)
    access-control: 127.0.0.0/8 allow
    access-control: {{ dns_split_lan_network | default('192.168.0.0/16') }} allow
    access-control: {{ dns_split_tailscale_network | default('100.64.0.0/10') }} allow

    # Performance
    num-threads: 2
    msg-cache-slabs: 4
    rrset-cache-slabs: 4
    infra-cache-slabs: 4
    key-cache-slabs: 4
    cache-max-ttl: 86400
    cache-min-ttl: 0

    # Security
    hide-identity: yes
    hide-version: yes
    minimal-responses: yes
    qname-minimisation: yes

    # DNSSEC
    auto-trust-anchor-file: "/var/lib/unbound/root.key"

    # Logging
    verbosity: 1
    log-queries: no
    log-replies: no
    log-servfail: yes