# Environment configuration for Homelab
# This file is managed by Ansible - do not edit manually

DJANGO_SETTINGS_MODULE={{ homelab_django_settings_module }}
DJANGO_SECRET_KEY={{ homelab_secret_key }}
DJANGO_DEBUG={{ homelab_django_debug | lower }}
DJANGO_ALLOWED_HOSTS={{ homelab_django_allowed_hosts }}
DJANGO_ADMIN_URL={{ homelab_django_admin_url }}

# Cache location
DJANGO_CACHE_LOCATION={{ homelab_cache_dir }}

# Database (SQLite)
DATABASE_URL=sqlite:///{{ homelab_database_path }}

# Static and media files
DJANGO_STATIC_ROOT={{ homelab_static_root }}
DJANGO_MEDIA_ROOT={{ homelab_media_root }}

# Disable SSL redirect for internal health checks
DJANGO_SECURE_SSL_REDIRECT=False
