# FastDeploy Environment Configuration
# Managed by Ansible - do not edit manually

DEPLOY_ENV={{ fastdeploy_environment }}
PATH_FOR_DEPLOY={{ fastdeploy_venv_bin }}:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin
SERVICES_ROOT={{ fastdeploy_services_path }}
SUDO_USER=deploy

# API Configuration
API_URL={{ fastdeploy_api_url }}

# Database Configuration
DATABASE_URL=postgresql+asyncpg://{{ fastdeploy_postgres_user }}:{{ fastdeploy_postgres_password }}@{{ fastdeploy_postgres_host }}:{{ fastdeploy_postgres_port }}/{{ fastdeploy_postgres_database }}

# Security
SECRET_KEY={{ fastdeploy_secret_key }}