http:
  routers:
    {{ marina_fqdn }}-router:
      rule: "{{ marina_traefik_host_rule }}"

      entryPoints:
        - web
      middlewares:
        - redirect
        - csrf
      service: {{ marina_fqdn }}

    {{ marina_fqdn }}-secure-router:
      rule: "{{ marina_traefik_host_rule }}"

      entryPoints:
        - web-secure
      middlewares:
        - csrf
        - sslHeaders
        - gzip-compress
        - redirect-www
      service: {{ marina_fqdn }}
      tls:
        certResolver: letsencrypt

  middlewares:
    redirect:
      redirectScheme:
        scheme: https
        permanent: true
    csrf:
      headers:
        hostsProxyHeaders: ["X-CSRFToken"]
    sslHeaders:
      headers:
        customRequestHeaders:
          X-Forwarded-Proto: "https"
          X-Forwarded-Port: "443"
    gzip-compress:
      compress: {}
    redirect-www:
      redirectRegex:
        regex: "^https?://www\\.(.+)"
        replacement: "https://${1}"
        permanent: false

  services:
    {{ marina_fqdn }}:
      loadBalancer:
        servers:
          - url: http://localhost:{{ marina_app_port }}
