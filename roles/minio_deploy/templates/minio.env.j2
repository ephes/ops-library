# MinIO environment configuration
# Managed by Ansible - do not edit manually

# Root credentials
MINIO_ROOT_USER="{{ minio_root_user }}"
MINIO_ROOT_PASSWORD="{{ minio_root_password }}"

# Data volumes
MINIO_VOLUMES="{{ minio_data_dirs | join(' ') }}"

# MinIO options
MINIO_OPTS="-C {{ minio_config_dir }} --address {{ minio_bind_host }}:{{ minio_api_port }} --console-address {{ minio_bind_host }}:{{ minio_console_port }}{% if minio_tls_enable %} --certs-dir {{ minio_certs_dir }}{% endif %}"

{% if minio_sse_enabled and minio_sse_master_key %}
# Server-side encryption
MINIO_KMS_SECRET_KEY="{{ minio_sse_master_key }}"
{% endif %}
