# Minecraft server.properties
# Generated by Ansible - minecraft_java_deploy role
# Manual changes will be overwritten on next deployment

# Server Settings
server-port={{ minecraft_java_port }}
max-players={{ minecraft_java_max_players }}
motd={{ minecraft_java_motd }}
level-name={{ minecraft_java_world_name }}
{% if minecraft_java_seed %}
level-seed={{ minecraft_java_seed }}
{% endif %}
level-type={{ minecraft_java_level_type }}

# Gameplay
difficulty={{ minecraft_java_difficulty }}
gamemode={{ minecraft_java_gamemode }}
pvp={{ minecraft_java_pvp | lower }}
allow-flight={{ minecraft_java_allow_flight | lower }}
allow-nether={{ minecraft_java_allow_nether | lower }}
generate-structures={{ minecraft_java_generate_structures | lower }}
spawn-protection={{ minecraft_java_spawn_protection }}
max-world-size={{ minecraft_java_max_world_size }}

# Performance
view-distance={{ minecraft_java_view_distance }}
simulation-distance={{ minecraft_java_simulation_distance }}
max-tick-time=60000
network-compression-threshold=256

# Security
online-mode={{ minecraft_java_online_mode | lower }}
white-list={{ minecraft_java_whitelist_enabled | lower }}
enforce-whitelist={{ minecraft_java_whitelist_enabled | lower }}
enforce-secure-profile=true

# RCON (for backup coordination)
enable-rcon={{ minecraft_java_rcon_enabled | lower }}
rcon.port={{ minecraft_java_rcon_port }}
rcon.password={{ minecraft_java_rcon_password }}
broadcast-rcon-to-ops=false

# Query (disabled for security)
enable-query=false

# JMX (disabled)
enable-jmx-monitoring=false

# Other defaults
spawn-npcs=true
spawn-animals=true
spawn-monsters=true
enable-command-block=false
op-permission-level=4
function-permission-level=2
player-idle-timeout=0
rate-limit=0
previews-chat=false
hide-online-players=false
sync-chunk-writes=true
use-native-transport=true
