upstream fastdeploy_backend {
    server 127.0.0.1:{{ upstream_port }};
}

server {
    listen 80;
    server_name {{ fd_self_allowed_hosts.split(',')[0] }};

    location / {
        proxy_pass http://fastdeploy_backend;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # WebSocket support for real-time updates
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        
        proxy_connect_timeout {{ fd_self_gunicorn_timeout }};
        proxy_send_timeout {{ fd_self_gunicorn_timeout }};
        proxy_read_timeout {{ fd_self_gunicorn_timeout }};
    }

    location /static/ {
        alias {{ fd_current_dir | default(fd_self_base_dir + '/fastdeploy') }}/staticfiles/;
        expires 30d;
    }

    location /media/ {
        alias {{ fd_current_dir | default(fd_self_base_dir + '/fastdeploy') }}/media/;
    }

    location {{ fd_self_health_check_endpoint }} {
        proxy_pass http://fastdeploy_backend{{ fd_self_health_check_endpoint }};
        access_log off;
    }
}