# FastDeploy Environment Configuration
# Generated by fastdeploy-self service

# FastAPI/Security Settings
SECRET_KEY={{ secret_key }}
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database (asyncpg for FastAPI)
DATABASE_URL=postgresql+asyncpg://{{ postgres_user | default('fastdeploy') }}:{{ postgres_password }}@{{ postgres_host }}:{{ postgres_port | default('5432') }}/{{ postgres_db_name }}

# Service Configuration
SERVICE_PORT={{ service_port | default(fd_self_service_port_blue) }}

# Password hashing
PASSWORD_HASH_ALGORITHM={{ password_hash_algorithm | default('bcrypt') }}

# Paths
PATH_FOR_DEPLOY={{ fd_self_base_dir }}

# Optional Monitoring
{% if sentry_dsn is defined %}
SENTRY_DSN={{ sentry_dsn }}
{% endif %}
{% if datadog_api_key is defined %}
DATADOG_API_KEY={{ datadog_api_key }}
{% endif %}