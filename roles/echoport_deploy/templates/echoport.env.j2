# Echoport environment configuration
# Managed by Ansible - do not edit manually

# Django settings
DJANGO_SETTINGS_MODULE={{ echoport_django_settings_module }}
SECRET_KEY={{ echoport_django_secret_key }}
ALLOWED_HOSTS={{ echoport_django_allowed_hosts }}
DJANGO_DEBUG={{ echoport_django_debug | lower }}

# FastDeploy integration
FASTDEPLOY_BASE_URL={{ echoport_fastdeploy_base_url }}
FASTDEPLOY_SERVICE_TOKEN={{ echoport_fastdeploy_service_token }}

# Application settings
APP_HOST={{ echoport_app_host }}
APP_PORT={{ echoport_app_port }}

# Paths
ECHOPORT_CACHE_DIR={{ echoport_cache_dir }}
ECHOPORT_ALLOWED_PATH_PREFIXES={{ echoport_allowed_path_prefixes | join(',') }}
