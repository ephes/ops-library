# Managed by Ansible (telegram_bot_deploy). Do not edit on the host.
[Unit]
Description=Telegram Bot with AI Replies (Docker Compose)
Requires=docker.service
After=docker.service network-online.target
Wants=network-online.target

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory={{ telegram_bot_site_dir }}
ExecStart=/usr/bin/docker compose -f {{ telegram_bot_site_dir }}/docker-compose.yml up -d --remove-orphans
ExecStop=/usr/bin/docker compose -f {{ telegram_bot_site_dir }}/docker-compose.yml down
TimeoutStartSec=0

[Install]
WantedBy=multi-user.target
